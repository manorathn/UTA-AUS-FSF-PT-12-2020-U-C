<div class="dish-card">
  <div class="dish-card-header">
    {{dish_name}}
  </div>
  {{#each dishes as |dish|}}

  <div class="card-body">
    {{#if dish}}
    <p>
      Description:
      {{description}}
    </p>
    <!-- TODO: Use a built-in helper to display "Contains Nuts" if a food item contains nuts.-->
    {{#if has_nuts}}Contains Nuts {{/if}}

  </div>

  {{/each}}
</div>